<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
 
    <div class="panel-body">
         <% @messages.each do |message| %>
         <span class="label label-info"><%=message.name %></span>
         <span class="label label-info"><%= message.age %>歳</span>
         <%= message.body %>
         (<%= link_to "edit" , edit_message_path(message) %>)
         (<%=link_to "destory" , message , method: :delete, data: {confirm: '削除してもよろしいですか'} %>
         )
         <br>
     <% end %>
    </div>
</div>

<%=form_for(Message.new) do |f|  %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%=alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                <li>
                    <%= full_message %>
                </li>
            <% end %>
            </ul>
        </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div> 
  <div class="form-group">  
    <%= f.label :age, "年齢" %>
    <%= f.text_field :age, class: "form-control" %>
  </div> 

  <div class="form-group">
    <%= f.label :body, "内容" %>
    <%= f.text_area :body, class: "form-control", rows: "4" %>
  </div> 
  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>